{
  "manifest_version": 3,
  "name": "Thinking Claude",
  "version": "1.0",
  "description": "Makes Claude's thinking process expandable and collapsible",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*.claude.ai/*", "https://demo.fuclaude.com/*"],
      "js": ["content.js"]
    }
  ]
}
